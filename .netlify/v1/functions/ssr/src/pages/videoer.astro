---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";


---

<html lang="da">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/styles/global.css">
    <title>Videoer</title>
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: Arial, sans-serif;
        background-color: #000;
        color: #fff;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
      }

      main {
        flex: 1; /* Ensures the main content takes up available space */
        padding: 1rem;
        text-align: center;
      }

      #video-container2 {
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0 auto;
        max-width: 90%; /* Ensures max-width responsiveness */
      }

      iframe.video {
        width: 100%; /* Full width for smaller screens */
        max-width: 800px; /* Restricts the maximum width */
        aspect-ratio: 16/9; /* Maintains the aspect ratio */
        border: none; /* Removes default border if any */
      }

      h1 {
        font-family: "Orbitron", sans-serif;
        color: turquoise;
        margin-bottom: 3rem;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1>Videoer</h1>
      <div id="video-container2" class="video-container2">
        <iframe
          class="video"
          src="https://www.youtube.com/embed/videoseries?list=PL3Piya5d5zW5ebpCg3YmAzvgJhyECYYx9&autoplay=1&mute=1&controls=1"
          title="YouTube Playlist"
          allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
          allowfullscreen
        ></iframe>
      </div>
    </main>
    <Footer />
  </body>
</html>
