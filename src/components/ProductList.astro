---
interface Product {
  id: number;
  name: string;
  price: string | number;
  image_url: string;
}

const { products } = Astro.props as { products: Product[] };
console.log("Products received in ProductList:", products);

/**
 * Format product name to capitalize the first letter of each word,
 * replace _ or - with spaces, and convert "drp" to "DRP"
 * @param {string} name - The original product name
 * @returns {string} - The formatted product name
 */
function formatProductName(name: string): string {
  return name
    .replace(/[_-]/g, " ") // Replace underscores and hyphens with spaces
    .replace(/\b\w+/g, (word) => {
      if (word.toLowerCase() === "drp") {
        return "DRP"; // Special case for "drp"
      }
      return word.charAt(0).toUpperCase() + word.slice(1); // Capitalize first letter of other words
    });
}
---
<section class="product-list">
  {products && products.length > 0 ? (
    products.map((product: Product) => (
      <a href={`/product/${product.id}`} class="product-card">
        <img
          src={product.image_url || "https://via.placeholder.com/150"}
          alt={product.name}
          class="product-image"
        />
        <h2 class="product-name">{formatProductName(product.name)}</h2>
        <p class="product-price">
          {typeof product.price === "string" && product.price.includes("DKK")
            ? product.price.replace("DKK DKK", "DKK")
            : `${product.price} DKK`}
        </p>
      </a>
    ))
  ) : (
    <p class="no-products">No products found in the selected categories.</p>
  )}
</section>

<style>
  .product-list {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
    padding: 1rem;
  }

  @media (max-width: 768px) {
    .product-list {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 480px) {
    .product-list {
      grid-template-columns: 1fr;
    }
  }

  .product-card {
    border: none;
    border-radius: 10px;
    background-color: black;
    text-align: center;
    text-decoration: none;
    color: inherit;
    padding: 1rem;
    box-shadow: 0 2px 5px rgba(255, 255, 255, 0.1);
  }

  .product-card:hover {
    transform: scale(1.05);
    transition: transform 0.2s ease-in-out;
    box-shadow: 0 4px 10px rgba(255, 255, 255, 0.2);
  }

  .product-image {
    width: 100%;
    height: auto;
    border-radius: 5px;
    margin-bottom: 1rem;
  }

  .product-name {
    font-family: "Orbitron", sans-serif;
    font-size: 1.2rem;
    color: #8c6b9c;
    margin-bottom: 0.5rem;
  }

  .product-price {
    font-family: "Exo", sans-serif;
    font-size: 1.2rem;
    color: #00ffaa;
    font-weight: bold;
  }

  .no-products {
    text-align: center;
    font-family: "Exo", sans-serif;
    font-size: 1.2rem;
    color: red;
  }
</style>
